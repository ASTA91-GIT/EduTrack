# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/edutrack

# JWT Authentication
JWT_SECRET_KEY=your_super_secret_key_change_in_production
JWT_REFRESH_SECRET_KEY=your_refresh_secret_key_change_in_production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Server Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:5500
DEBUG=True
LOG_LEVEL=INFO

# Application Settings
APP_NAME=EduTrack
APP_VERSION=1.0.0
APP_DESCRIPTION="Student Attendance Tracking System"

# Logging
LOG_FILE=logs/app.log
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"